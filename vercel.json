{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(css|img|js)/(.*)", "dest": "/public/$1/$2" }, // Pour les fichiers CSS, JS et images
    { "src": "/(.*)", "dest": "index.js" }                 // Pour tous les autres fichiers dans public
  ]
}
